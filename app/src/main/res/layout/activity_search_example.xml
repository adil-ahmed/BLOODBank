<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bloodbank.eatl.com.bloodbank.activity.SearchExample">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:weightSum="10">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:weightSum="4">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                                <TextView
                                                    android:id="@+id/textView2"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentLeft="true"
                                                    android:layout_alignParentStart="true"
                                                    android:layout_centerVertical="true"
                                                    android:text="Blood Group"
                                                    android:textColor="#000"
                                                    android:textSize="15dp" />

                                                <Spinner
                                                    android:id="@+id/bloodGroup"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="30dp"

                                                    android:layout_below="@+id/textView2"
                                                    android:ems="10"
                                                    android:entries="@array/bloodgroup"
                                                    android:padding="0dp"
                                                    android:paddingLeft="20dp">
                                                </Spinner>
                                        </RelativeLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:layout_marginTop="10dp">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                                <TextView
                                                    android:id="@+id/textView3"
                                                    android:layout_width="wrap_content"

                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentLeft="true"
                                                    android:layout_alignParentStart="true"
                                                    android:layout_alignParentTop="true"
                                                    android:text="Area"
                                                    android:textColor="#000"
                                                    android:textSize="15dp" />

                                                <Spinner
                                                    android:id="@+id/location"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="30dp"
                                                    android:layout_below="@+id/textView3"
                                                    android:padding="5dp"
                                                    android:ems="10"
                                                    android:paddingLeft="20dp"

                                                    >
                                                </Spinner>
                                        </RelativeLayout>

                                </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:weightSum="4"
                            android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center">
                                        <Button
                                            android:layout_width="110dp"
                                            android:layout_height="25dp"
                                            android:hint="Both"
                                            android:textColorHint="#fff"
                                            android:id="@+id/searchButton"
                                            android:background="@drawable/border"
                                            android:textColor="#ffffff"
                                            />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center">
                                        <Button
                                            android:layout_width="110dp"
                                            android:layout_height="25dp"
                                            android:hint="Search By Blood"
                                            android:textColorHint="#fff"
                                            android:id="@+id/searchByBlood"
                                            android:background="@drawable/border"
                                            android:textColor="#ffffff"
                                            />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center">
                                        <Button
                                            android:layout_width="110dp"
                                            android:layout_height="25dp"
                                            android:id="@+id/searchByArea"
                                            android:hint="Search By Area"
                                            android:textColorHint="#fff"
                                            android:background="@drawable/border"
                                            android:textColor="#ffffff"
                                            />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center">
                                        <Button
                                            android:layout_width="110dp"
                                            android:layout_height="25dp"
                                            android:hint="Refresh"
                                            android:textColorHint="#fff"
                                            android:id="@+id/refresh"
                                            android:background="@drawable/border"
                                            android:textColor="#ffffff"
                                            />

                                </LinearLayout>

                        </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="0dp">

                        </android.support.v7.widget.RecyclerView>

                </LinearLayout>

        </LinearLayout>
</RelativeLayout>




